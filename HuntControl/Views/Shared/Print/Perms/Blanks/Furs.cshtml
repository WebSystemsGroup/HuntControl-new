        margin-left: -.1cm;
        margin-right: .6cm;
        margin-bottom: 0;
        text-indent: 2cm;
        line-height: .41cm;
    }

    .hunting-area-name::first-line {
        line-height: 1cm;
    }

    .permission-status {
        margin-top: -0.8cm;
        margin-left: 3.6cm;
        margin-right: .6cm;
        margin-bottom: 0;
        line-height: .35cm;
    }

        .permission-status::first-line {
            line-height: 1cm;
        }

    .hunting-ticket {
        margin-top: .75cm;
        margin-left: 3.6cm;
    }

    .page-2 .hunting-ticket {
        margin-left: 3.7cm;
    }

    .hunting-ticket .serial {
        margin-right: .9cm;
    }

    .hunting-ticket-date {
        width: 3.2cm;
        margin-top: .09cm;
        margin-left: 4.05cm;
    }

    .page-2 .hunting-ticket-date {
        margin-left: 4.15cm;
    }

    .hunting-ticket-date .day {
        margin-right: .4cm;
    }

    .hunting-ticket-date .year {
        float: right;
    }


    .authorized-person {
        margin-top: 0cm;
        margin-left: 7cm;
    }

    .permission-date {
        display: inline-block;
        vertical-align: bottom;
        width: 3.1cm;
        margin-top: 0.25cm;
        margin-left: 7.15cm;
    }

        .permission-date .day {
            margin-right: .4cm;
        }

        .permission-date .year {
            float: right;
        }

    .fixed-table {
        height: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }

    @@media print {
        .page {
            margin: 0;
            box-shadow: 0;
            page-break-after: always;
        }
    }


    @@page {
        size: A4 landscape;
    }
</style>
<div class="page page-1">
    <section class="left">
        <div class="subject"></div>
        <div class="organization-name">@Model.Model.out_organization_name</div>
        <div class="fixed-table">
            <div class="hunting-items">
                @{ int index = 1;}
                @foreach (var item in Model.AnimalList)
                {
                    <div class="hunting-item">
                        <span class="number">@(index++)</span>
                        <span class="hunting-type-name">@item.out_animal_name</span>
                        <span class="date-start">@item.out_date_start</span>
                        <span class="date-stop">@item.out_date_stop</span>
                        <span class="limit-day">@item.out_limit_day</span>
                        <span class="limit-season">@item.out_limit_season</span>
                    </div>
                }
            </div>
        </div>
        <div style="margin-top: 6.0cm;">
            <p class="hunting-area-name">@Model.Model.out_hunting_farm_name</p>
            <p class="permission-status">@Model.Model.out_customer_name</p>
            <div class="hunting-ticket">
                <span class="serial">@Model.Model.out_hunting_lic_serial</span>
                <span class="number">@Model.Model.out_hunting_lic_number</span>
            </div>
            <div class="hunting-ticket-date">
                <span class="day">@(Model.Model.out_hunting_lic_issue_date?.ToString("dd"))</span>
                <span class="month">@(Model.Model.out_hunting_lic_issue_date?.ToString("MMMM"))</span>
                <span class="year">@(Model.Model.out_hunting_lic_issue_date?.ToString("yy"))</span>
            </div>
            <p class="hunting-area-type-name">@Model.Model.out_hunting_type_name</p>
            @*<div class="hunting-type">@Model.out_hunting_type_name</div>*@
        </div>
    </section>
    <section class="center">
