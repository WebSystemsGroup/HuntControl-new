@model IEnumerable<HuntControl.Domain.Concrete.ReportReestrCountServiceResult>
<link href="~/Content/css/print-report.css" rel="stylesheet" />
<style>
    @@media print {
        @@page {
            size:portrait;
        }
        .page {
            height: auto;
            width: 100%;
            page-break-after: always;
        }
        table thead th, table tbody td {
            font-size: 10px !important;
            padding: 5px !important;
        }
        .dl-horizontal dt {
            min-width: 90px;
        }
        .dl-horizontal dd {
            margin-left: 110px;
        }
        table thead tr th {
        font-weight:bold;
        }
        thead {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }
        #printable th {
            text-align: center;
            padding: 2px; /* Поля вокруг содержимого ячеек */
            border: 1px solid black; /* Граница вокруг ячеек */
            font-size: 8.0pt;
            font-weight: bold;
        }
        
        #printable th span{
           color:#808080;
           font-weight: normal;
        }

        h6 {
            margin: 10px !important;
        }
        /*---*/
        .report_head {
            padding-bottom: 5px;
        }
        .report_head table tbody td {
            font-size: 12px !important;
            padding: 3px !important;
            }
        .org_name {
            font-size: 14px;
            font-weight: bold;
        }

        .report_name {
            text-align: center;
            font-size: 16px;
            font-weight: bold;
        }

        .head-left {
            border-right: 1px solid gray;
        }

        .head-center {
            border-right: 1px solid gray;
        }
    }
</style>

<div id="printable">
    <div class="report_head">
        <table width="100%">
            <tr>
                <td valign="top"><img src="~/Content/img/docGebLogo.png" align="top" height="70%" /></td>
                <td width="25%;" class="text-right head-left" valign="top">
                    <span class="org_name">Министерство природных ресурсов и экологии Республики Дагестан</span>
                </td>
                <td width="50%" valign="top" class="head-center">
                    <div class="report_name">Реестр по количеству услуг</div>
                    <table width="100%">                        
                        <tr><td width="20%">Период:</td><td><b>@ViewBag.Period</b></td></tr>
                        <tr><td>Статус:</td><td><b>@ViewBag.Status</b></td></tr>
                        <tr><td>Способ обращения:</td><td><b>@ViewBag.WayGet</b></td></tr>
                    </table>
                </td>
                <td width="20%" valign="top">
                    <table>
                        <tr><td>Распечатал:</td></tr>
                        <tr><td>@ViewBag.PrintEmployee</td></tr>
                        <tr><td>@DateTime.Now</td></tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <!-- page 1 start-->
    <div class="page">       
        <table class="table text-center">
            <thead>
                <tr>
                    <th style="width:30px;">№ п/п</th>
                    <th>@Html.DisplayNameFor(model => model.out_provider_name)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_name)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_count)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_tariff)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_tariff_sum)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_charge)</th>
                    <th>@Html.DisplayNameFor(model => model.out_service_charge_sum)</th>
                </tr>

            </thead>
            <tbody>
                @{int index = 1; }
                @foreach (var item in Model)
                {
                <tr>
                    <td>@(index++)</td>
                    <td class="text-left">@Html.DisplayFor(i => item.out_provider_name)</td>
                    <td class="text-left">@Html.DisplayFor(i => item.out_service_name)</td>
                    <td>@Html.DisplayFor(i => item.out_service_count)</td>
                    <td>@Html.DisplayFor(i => item.out_service_tariff)</td>
                    <td>@Html.DisplayFor(i => item.out_service_tariff_sum)</td>
                    <td>@Html.DisplayFor(i => item.out_service_charge)</td>
                    <td>@Html.DisplayFor(i => item.out_service_charge_sum)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
