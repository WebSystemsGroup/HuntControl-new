@model IEnumerable<HuntControl.Domain.Concrete.ReportTotalHuntingGroupResult>
<link href="~/Content/css/print-report.css" rel="stylesheet" />
<style>
    @@media print {
        @@page {
            size:portrait;
        }
        .page {
            height: auto;
            width: 100%;
            page-break-after: always;
        }
        table thead th, table tbody td {
            font-size: 10px !important;
            padding: 5px !important;
        }
        .dl-horizontal dt {
            min-width: 90px;
        }
        .dl-horizontal dd {
            margin-left: 110px;
        }
        table thead tr th {
        font-weight:bold;
        }
        thead {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }
        #printable th {
            text-align: center;
            padding: 2px; /* Поля вокруг содержимого ячеек */
            border: 1px solid black; /* Граница вокруг ячеек */
            font-size: 8.0pt;
            font-weight: bold;
        }
        
        #printable th span{
           color:#808080;
           font-weight: normal;
        }

        h6 {
            margin: 10px !important;
        }
        /*---*/
        .report_head {
            padding-bottom: 0;
        }
        .report_head table tbody td {
            font-size: 12px !important;
            padding: 3px !important;
            }
        .org_name {
            font-size: 14px;
            font-weight: bold;
        }

        .report_name {
            text-align: center;
            font-size: 16px;
            font-weight: bold;
        }

        .head-left {
            border-right: 1px solid gray;
        }

        .head-center {
            border-right: 1px solid gray;
        }


        table th {
            border: 2px solid #000000 !important;
        }
    }
</style>

<div id="printable">
    <div class="report_head">
        <table width="100%">
            <tr>
                <td><img src="~/Content/img/docGebLogo.png" align="top" height="70%" /></td>
                <td width="25%;" class="text-right head-left" valign="top">
                    <span class="org_name">Министерство природных ресурсов и экологии Республики Дагестан</span>
                </td>
                <td width="40%" valign="top" class="head-center">
                    <div class="report_name">Общий отчет по разрешению в разрезе групп</div>
                    <table>
                        <tr><td width="20%">Период:</td><td><b>@ViewBag.Period</b></td></tr>
                        <tr><td style="white-space: nowrap;">Охотугодье:</td><td><b>@ViewBag.HuntingFarm</b></td></tr>
                        <tr><td style="white-space: nowrap;">Вид охотугодья:</td><td><b>@ViewBag.HuntingFarmType</b></td></tr>
                    </table>
                </td>
                <td width="20%" valign="top">
                    <table>
                        <tr><td>Распечатал:</td></tr>
                        <tr><td>@ViewBag.PrintEmployee</td></tr>
                        <tr><td>@DateTime.Now.ToShortDateString()</td></tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <hr style="margin-top: 0; margin-bottom: 10px;" />
    <!-- page 1 start-->
    <div class="page">
        <table class="table text-center">
            <thead>
                <tr class="text-nowrap">
                    <th rowspan="2" style="width: 30px;">№ п/п</th>
                    <th rowspan="2">Наименование группы</th>
                    <th colspan="3" class="text-center">Бланки</th>
                    <th colspan="4" class="text-center">Животное</th>
                </tr>
                <tr class="text-nowrap">
                    <th>Кол-во</th>
                    <th>Выдано</th>
                    <th>Остаток</th>
                    <th>Кол-во</th>
                    <th>Выдано</th>
                    <th>Остаток</th>
                    <th>Добыто</th>
                </tr>
            </thead>
            <tbody>
                @{int index = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>@Html.DisplayFor(model => item.out_group_type_name)</td>
                        <td>@Html.DisplayFor(model => item.out_count_form)</td>
                        <td>@Html.DisplayFor(model => item.out_count_form_issued)</td>
                        <td>@Html.DisplayFor(model => item.out_count_form_result)</td>
                        <td>@Html.DisplayFor(model => item.out_limit_animal)</td>
                        <td>@Html.DisplayFor(model => item.out_count_animal_issued)</td>
                        <td>@Html.DisplayFor(model => item.out_count_animal_result)</td>
                        <td>@Html.DisplayFor(model => item.out_count_animal_mined)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
