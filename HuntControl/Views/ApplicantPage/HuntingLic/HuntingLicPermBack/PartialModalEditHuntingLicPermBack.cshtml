@model HuntControl.Domain.Concrete.data_customer_hunting_lic_perm_back
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script>
    $(document).ready(function () {
        $('#date_back').datepicker({ format: 'dd.mm.yyyy', autoclose: true, language: 'ru' });
    });
</script>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Изменение корешка</h4>
        </div>
        <div class="modal-body">

            @using (Ajax.BeginForm("SubmitHuntingLicPermBackSave", "ApplicantPage", Model, new AjaxOptions { UpdateTargetId = "huntingLicPermBackContainer", OnSuccess = "$('#myModal').modal('hide');" }, new { @id = "EditHuntingLicPermBackForm", @class = "form-horizontal" }))
            {
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.date_back, new Dictionary<string, object> {{"class", "col-md-4 control-label text-right"}})
                        <div class="col-md-4">
                            <div class="input-group">
                                @Html.TextBox("date_back", DateTime.Now, "{0:dd.MM.yyyy}", new {@class = "form-control input-sm required", @placeholder = "дата возврата"})
                                <span class="input-group-addon bg-custom b-0 text-white"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                int index = 0;
                var dataCustomerHuntingLicPermBackAnimals = ViewBag.Animals as IEnumerable<HuntControl.Domain.Concrete.data_customer_hunting_lic_perm_back_animal>;

                if (dataCustomerHuntingLicPermBackAnimals != null)
                {
                    <h3 class="panel-title p-l-r-10">Количество отстрелянных животных</h3>
                    <hr class="m-t-0 m-b-10" />
                    <table class="table m-b-0">
                        <thead>
                            <tr>
                                <th class="p-l-20-important">Животное</th>
                                <th>Количество</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in dataCustomerHuntingLicPermBackAnimals)
                            {
                                <tr>
                                    <td class="vertical-middle p-l-20-important">
                                        @item.spr_animal.animal_name
                                        <input type="hidden" name="huntingLicPermBackAnimals[@index].id" value="@item.id">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control input-sm touchspin" name="huntingLicPermBackAnimals[@index].count_animal" value="@item.count_animal">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="EditHuntingLicPermBackForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
