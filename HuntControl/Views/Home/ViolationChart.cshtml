@model HuntControl.WebUI.Models.StatisticsViewModel
<canvas id="violationsChart" width="400" height="100"></canvas>

<script src="~/Content/plugins/Chart.js/Chart.min.js"></script>
<script>
    var ctx = document.getElementById('violationsChart').getContext('2d');
     var chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'bar',

            // The data for our dataset
            data: {
                labels:  ["Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"],
                datasets: [{
                    label: "Нарушения",
                    backgroundColor: 'rgb(240, 80, 80)',
                    borderColor: 'rgb(240, 80, 80)',
                    data: @Json.Encode(Model.MainCountViolationsList.Select(s => s.out_count_violations).ToArray())
                }]
            },

            // Configuration options go here
         options: {
             layout: {
                 padding: {
                     left: 0,
                     right: 0,
                     top: 50,
                     bottom: 0
                 }
             },
             legend: {
                 display: false,
                 labels: {
                 }
             }
            }
        });
</script>

