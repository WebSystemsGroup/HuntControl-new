@{
    ViewBag.Title = "Карта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.MvcSiteMap().SiteMapPath()
<div class="card-box m-t-20">
   <iframe width="100%" height="650" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" title="Охотничьи угодья Республики Дагестан" src="//huntmap.maps.arcgis.com/apps/Embed/index.html?webmap=dd89e94765aa47b9a96ea5b8abef94b0&amp;extent=39.2416,39.5183,55.4685,46.4052&amp;zoom=true&amp;previewImage=false&amp;scale=true&amp;search=true&amp;searchextent=true&amp;legendlayers=true&amp;basemap_gallery=true&amp;disable_scroll=false&amp;theme=light"></iframe>
</div>
<script src="~/Content/plugins/hopscotch/js/hopscotch.min.js"></script>
<script>
    $(document).ready(function () {
        // Define the tour!
        var tour = {
            id: "my-intro",
            i18n: {
                nextBtn: "Далее",
                prevBtn: "Назад",
                doneBtn: "Готово",
                skipBtn: "Пропустить",
                closeTooltip: "Закрыть",
            },
            steps: [
                {
                    target: "a[data-toor-name='newCase']",
                    title: "Новое обращение",
                    content: "Добавление нового обращения.",
                    placement: 'bottom',
                    yOffset: 10,
                    xOffset: -10
                },
                {
                    target: "a[data-toor-name='cases']",
                    title: "Обращения",
                    content: "Страница всех принятых дел текущего сотрудника.",
                    placement: 'bottom',
                    yOffset: 10,
                    zindex: 999
                },
                {
                    target: "a[data-toor-name='hunters']",
                    title: "Охотники",
                    content: "Страница всех охотников.",
                    placement: 'bottom',
                    yOffset: 10,
                    zindex: 999
                },
                {
                    target: 'searchText',
                    title: "Поиск",
                    content: "Поиск обращений или охотников по ФИО, адресу, номеру дела или по номеру телефона.",
                    placement: 'bottom',
                    yOffset: 10,
                    zindex: 999
                },
                {
                    target: "a[data-toor-name='search-settings']",
                    title: "Расширенные настройки",
                    content: "Расширенные настройки поиска.",
                    placement: 'bottom',
                    yOffset: 10,
                    zindex: 999
                },
                {
                    target: "a[data-toor-name='navMenu']",
                    title: "Меню",
                    content: "Справочники",
                    placement: 'bottom',
                    yOffset: 10,
                    zindex: 999
                },
            ],
            showPrevButton: true
        };

        $('#startToorBtn').click(function () {
            hopscotch.startTour(tour);
        });
        // Start the tour!
    });

</script>