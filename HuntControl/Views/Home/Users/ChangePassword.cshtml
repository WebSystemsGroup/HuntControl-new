@model HuntControl.WebUI.Models.ChangePasswordModel
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Изменение пароля</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitEditPassword", "Account", Model, new AjaxOptions { UpdateTargetId = "", OnSuccess = "$('#myModal').modal('hide'); successEdit();" }, new { @id = "ChangePasswordForm", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(s => Model.Login)
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.Password, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Password, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "введите старый пароль" } })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.NewPassword, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.NewPassword, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "введите новый пароль" } })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="ChangePasswordForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
