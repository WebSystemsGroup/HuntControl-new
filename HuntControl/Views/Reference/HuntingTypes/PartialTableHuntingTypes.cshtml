@model HuntControl.WebUI.Models.ReferenceViewModel
<div class="row">
    <div class="col-sm-10">
        <h3 class="panel-title m-b-5">Список видов охоты</h3>
    </div>
    <div class="col-sm-2">
        <div class="text-right">
            @using (Ajax.BeginForm("PartialModalAddHuntingType", "Reference", null, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
            {
                <button type="submit" class="btn btn-inverse waves-effect waves-light btn-sm btn-block m-b-10"> Добавить <i class="fa fa-plus m-l-5"></i></button>
            }
        </div>
    </div>
</div>
@if (Model.SprHuntingTypeList.Any())
{
    <div class="card-box p-0">
        <div class="table-responsive">
            <table class="table table-hover m-b-0">
                <thead>
                    <tr>
                        <th class="number-row p-l-20-important">№</th>
                        <th>@Html.DisplayNameFor(model => model.SprHuntingTypeList.First().type_name)</th>
                        <th class="text-right p-r-20-important">
                            <button id="showRemoves" type="button" class="link p-r-0 text-custom"><i class="@(ViewBag.IsRemove ? "ion-ios7-trash" : "ion-ios7-trash-outline") m-l-5" style="font-size: 20px;" data-placement="bottom" data-toggle="tooltip" data-original-title="@(ViewBag.IsRemove ? "Скрыть удаленные" : "Показать удаленные")"></i></button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SprHuntingTypeList)
                    {
                        <tr data-hunting-type-id="@item.id" class="@(item.is_remove == true ? "danger" : "")">
                            <td class="number-row p-l-20-important">
                                @((Model.PageInfo.CurrentPage - 1) * Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                            </td>
                            <td>
                                <span>@Html.DisplayFor(i => item.type_name)</span><br>
                            </td>
                            <td class="actions">
                                <button type="button" class="on-default text-custom link" style="font-size: 22px;line-height: 22px;" data-tooltip-info='{"type_name": @Json.Encode(item.type_name), "employees_fio": @Json.Encode(item.employees_fio), "employees_fio_modifi": @Json.Encode(item.employees_fio_modifi), "set_date": "@Html.DisplayFor(i=>item.set_date)", "is_remove": @Json.Encode(item.is_remove), "date_remove": "@Html.DisplayFor(i=>item.date_remove)", "employees_fio_remove": @Json.Encode(item.employees_fio_remove), "commentt_remove": @Json.Encode(item.commentt_remove)}'>
                                    <i class="ion-ios7-information-outline"></i>
                                </button>
                                @if (User.IsInRole("superadmin") || User.IsInRole("admin"))
                                {
                                    if (item.is_remove != true)
                                    {
                                        using (Ajax.BeginForm("PartialModalHuntingTypeAnimals", "Reference", new { huntingTypeId = item.id }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
                                        {
                                            <button class="on-default edit-row link" data-placement="top" data-toggle="tooltip" data-original-title="Животные к виду охоты">
                                                <i class="ion-ios7-paw"></i>
                                                <span class="badge badge-xs badge-danger">@(item.spr_animal_hunting_type_join_count > 0 ? (object)item.spr_animal_hunting_type_join_count : null)</span>
                                            </button>
                                        }
                                        using (Ajax.BeginForm("PartialModalEditHuntingType", "Reference", new { huntingTypeId = item.id }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
                                        {
                                            <button class="on-default edit-row link"><i class="ion-edit"></i></button>
                                        }
                                        <button class="on-default remove-row link"><i class="ion-trash-b"></i></button>
                                    }
                                    else
                                    {
                                        <button class="on-default recovery-row link" data-placement="top" data-toggle="tooltip" data-original-title="Восстановление"><i class="fa fa-history"></i></button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr class="m-0">
        <div class="row p-t-10 p-l-20-important p-r-20-important p-b-10">
            <div class="col-sm-6">
                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Показаны @((Model.PageInfo.CurrentPage * Model.PageInfo.ItemsPerPage > Model.PageInfo.TotalItems) ? Model.PageInfo.TotalItems : Model.PageInfo.CurrentPage * Model.PageInfo.ItemsPerPage) из @Model.PageInfo.TotalItems записей</div>
            </div>
            <div class="col-sm-6">
                <div class="dataTables_paginate paging_simple_numbers" id="datatable-editable_paginate">
                    @Html.PageLinks(Model.PageInfo, x => Ajax.ActionLink(x.NameLink, "PartialTableHuntingTypes", "Reference", new { page = x.CurrentPage }, new AjaxOptions { UpdateTargetId = "huntingTypesContainer" }))
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <span style="color:#00545c;"><strong><i class="icon-info"></i></strong> Нет видов охоты.</span>
    </div>
}

<script>
     $(function () {
        $('[data-toggle="tooltip"]').tooltip({ trigger: 'hover' });
        $('button[data-tooltip-info]').tooltip({
            title: function () {
                var tooltipInfo = $(this).data('tooltipInfo');
                return "<div class='text-left'>" +
                    "<strong>Вид охоты</strong>: " + tooltipInfo['type_name'] + "</br>" +
                    "<hr class='m-t-5 m-b-5'>" +
                    "<strong>Добавил</strong>: " + tooltipInfo['employees_fio'] + "</br>" +
                    "<strong>Дата добавления</strong>: " + tooltipInfo['set_date'] + "</br>" +
                    "<hr class='m-t-5 m-b-5'>" +
                    "<strong>Изменил</strong>: " + tooltipInfo['employees_fio_modifi'] + "</br>" +
                    (tooltipInfo['is_remove'] ?
                            "<hr class='m-t-5 m-b-5'>" +
                            "<strong>Удалил</strong>: " + tooltipInfo['employees_fio_remove'] + "</br>" +
                            "<strong>Причина удаления</strong>: " + tooltipInfo['commentt_remove'] + "</br>" +
                            "<strong>Дата удаления</strong>: " + tooltipInfo['date_remove'] + "</br>" : "") +
                    "</div>";
            },
            html: true,
            placement: "left"
        });
    });

    $('#showRemoves').click(function () {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("PartialTableHuntingTypes", "Reference")',
            data: { isRemove: '@(!ViewBag.IsRemove)' },
            success: function (data) {
                $('#huntingTypesContainer').html(data);
            }
        });
    });

    $('#huntingTypesContainer table td button.recovery-row').click(function () {
        var huntingTypeId = $(this).closest('tr').data('huntingTypeId');
        var paramObject = {
            url: '@Url.Action("SubmitHuntingTypeRecovery", "Reference")',
            params: { huntingTypeId: huntingTypeId },
            onSuccess: function (data) {
                $('#huntingTypesContainer').html(data);
            }
        }
        removeRecovery(paramObject);
    });

    $('#huntingTypesContainer table td button.remove-row').click(function () {
        var huntingTypeId = $(this).closest('tr').data('huntingTypeId');
        var paramObject = {
            url: '@Url.Action("SubmitHuntingTypeDelete", "Reference")',
            params: { huntingTypeId: huntingTypeId },
            onSuccess: function (data) {
                $('#huntingTypesContainer').html(data);
            }
        }
        removeWithComment(paramObject);
    });
</script>