@model HuntControl.Domain.Concrete.spr_legal_person
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/bootstrap-select/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
<script>

    $(document).ready(function () {
        $('.selectpicker').selectpicker();
        $('#date_contract').datepicker({ format: 'dd.mm.yyyy', autoclose: true, language: 'ru' });
        $('.slimscroll-legal-person').slimScroll({
            height: '100%',
            position: 'right',
            size: "10px",
            color: '#98a6ad',
            wheelStep: 20,
            railVisible: true,
            railColor: '#666',
            railOpacity: 0.1,
            alwaysVisible: true
        });
        $('input[data-type=date]').datepicker({ format: 'dd.mm.yyyy', autoclose: true, language: 'ru', orientation: 'top' });
    });

</script>
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Добавление ЮЛ</h4>
        </div>
        <div class="modal-body">
            <div class="card-box m-b-0" style="height: 500px;">
                <div class="slimscroll-legal-person">
                    @using (Ajax.BeginForm("SubmitLegalPersonSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "legalPersonsContainer", OnSuccess = "$('#myModal').modal('hide');successAdd();" }, new { @id = "AddLegalPersonForm", @class = "form-horizontal" }))
                    {
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.spr_services_sub_type_recipient_id, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(model => model.spr_services_sub_type_recipient_id, ViewBag.RecipientTypes as SelectList, "Выберите тип лица", new Dictionary<string, object> { { "class", "selectpicker" }, { "data-style", "btn-white btn-sm" } , {"required","required" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.legal_name, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.legal_name, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.legal_name) } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.head_fio, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.head_fio, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.head_fio) } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.legal_address, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.legal_address, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.legal_address) } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.actual_address, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.actual_address, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.actual_address) } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                <div class="col-md-4 text-right">
                                    @Html.LabelFor(model => model.inn, new Dictionary<string, object> { { "class", "control-label" } }) /
                                    @Html.LabelFor(model => model.kpp, new Dictionary<string, object> { { "class", "control-label" } })
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.inn, new Dictionary<string, object> {{"class", "form-control"}, {"placeholder", Html.DisplayNameFor(model => model.inn)}})
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.kpp, new Dictionary<string, object> {{"class", "form-control"}, {"placeholder", Html.DisplayNameFor(model => model.kpp)}})
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                <div class="col-md-4 text-right">
                                    @Html.LabelFor(model => model.ogrn, new Dictionary<string, object> { { "class", "control-label" } }) /
                                    @Html.LabelFor(model => model.egrul_date, new Dictionary<string, object> { { "class", "control-label" } })
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.ogrn, new Dictionary<string, object> {{"class", "form-control"}, {"placeholder", Html.DisplayNameFor(model => model.ogrn)}})
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.egrul_date, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "__.__.____" }, { "data-type", "date" } })
                                        <span class="input-group-addon bg-custom b-0 text-white"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                <div class="col-md-4 text-right">
                                    @Html.LabelFor(model => model.okved, new Dictionary<string, object> { { "class", "control-label" } })
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.okved, new Dictionary<string, object> {{"class", "form-control"}, {"placeholder", Html.DisplayNameFor(model => model.okved)}})
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                <div class="col-md-4 text-right">
                                    @Html.LabelFor(model => model.date_contract, new Dictionary<string, object> { { "class", "control-label" } })
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.date_contract, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "__.__.____" }, { "data-type", "date" } })
                                        <span class="input-group-addon bg-custom b-0 text-white"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3 class="panel-title">Контактные данные</h3>
                        <hr class="m-t-10" />
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.phone_number1, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.phone_number1, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.phone_number1) }, { "data-type",  "phone-number" } })
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.phone_number2, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.phone_number2) }, { "data-type", "phone-number" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.e_mail, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.e_mail, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.e_mail) } })
                                </div>
                            </div>
                        </div>
                        <h3 class="panel-title">Расчетный счет</h3>
                        <hr class="m-t-10" />
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.spr_bank_id, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(model => model.spr_bank_id, ViewBag.Banks as SelectList, "Выберите банк", new Dictionary<string, object> { { "class", "selectpicker" }, { "data-style", "btn-white btn-sm" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="row">
                                @Html.LabelFor(model => model.bank_account, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.bank_account, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.bank_account) } })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light btn-block-xs" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="AddLegalPersonForm" class="btn btn-success waves-effect waves-light btn-block-xs"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
