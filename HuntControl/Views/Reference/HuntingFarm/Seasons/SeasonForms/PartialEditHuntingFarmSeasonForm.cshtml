@model HuntControl.Domain.Concrete.spr_hunting_farm_season_forms
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/bootstrap-select/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
<script>

    $(document).ready(function () {
        $('.selectpicker').selectpicker();
        $('input[data-type=date]').datepicker({ format: 'dd.mm.yyyy', autoclose: true, language: 'ru', orientation: 'top' });
    });

</script>
@using (Ajax.BeginForm("SubmitHuntingFarmSeasonFormSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "huntingFarmSeasonFormsContainer", OnSuccess = "successEdit();$('#collapseEditHuntingFarmSeasonForms').collapse('hide'); $('#seasonFormAddBtn').show();" }, new { @class = "form-horizontal" }))
{

    <div class="row m-b-15">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
        <div class="col-sm-6">
            <h3 class="panel-title">Изменение бланка</h3>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-cancel waves-effect waves-light m-r-5" onclick="$('#collapseEditHuntingFarmSeasonForms').collapse('hide'); $('#seasonFormAddBtn').show(); $('#collapseEditHuntingFarmSeasonForms table tr').removeClass('warning');"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div>
        <div class="form-group form-group-sm">
            <div class="col-md-3">
                @Html.LabelFor(model => model.serial_form, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.serial_form, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.serial_form) })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.number_form_start, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.number_form_start, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.number_form_start) })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.number_form_stop, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.number_form_stop, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.number_form_stop) })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.count_form, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.count_form, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.count_form) })
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-5">
                @Html.LabelFor(model => model.fio_issue, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.fio_issue, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.fio_issue) })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.fio_got, new { @class = "font-13" })
                @Html.TextBoxFor(model => model.fio_got, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.fio_got) })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.date_issue, new { @class = "font-13" })
                <div class="input-group">
                    @Html.TextBoxFor(model => model.date_issue, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "__.__.____" }, { "data-type", "date" } })
                    <span class="input-group-addon bg-custom b-0 text-white"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
        </div>

    <div class="row">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
    </div>
}