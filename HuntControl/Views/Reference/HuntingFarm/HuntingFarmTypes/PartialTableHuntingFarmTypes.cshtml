@model HuntControl.WebUI.Models.HuntingFarmViewModel
<div class="row">
    <div class="col-sm-10">
        <h3 class="panel-title m-b-5">Список видов охотугодья</h3>
    </div>
    <div class="col-sm-2">
        <div class="text-right">
            @using (Ajax.BeginForm("PartialModalAddHuntingFarmType", "Reference", null, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
            {
                <button type="submit" class="btn btn-inverse waves-effect waves-light btn-sm btn-block m-b-10"> Добавить <i class="fa fa-plus m-l-5"></i></button>
            }
        </div>
    </div>
</div>
<div class="panel panel-border panel-primary">
    <div class="panel-body p-0 table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="number-row p-l-20-important">№</th>
                <th>@Html.DisplayNameFor(model => model.HuntingFarmTypeList.First().type_name)</th>
                <th class="text-right p-r-20-important">
                    Действия
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.HuntingFarmTypeList)
            {
                <tr data-hunting-farm-type-id="@item.id">
                    <td class="number-row p-l-20-important">
                        @((Model.PageInfo.CurrentPage - 1)*Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.type_name)
                    </td>
                    <td class="actions">
                        @if (User.IsInRole("superadmin"))
                        {
                            using (Ajax.BeginForm("PartialModalEditHuntingFarmType", "Reference", new { huntingFarmTypeId = item.id }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
                            {
                                <button class="on-default edit-row link"><i class="ion-edit"></i></button>
                            }
                            <button class="on-default remove-row link" onclick="removeData('SubmitCityDelete', { dataId: '@item.id' }, 'wizardAddress')"><i class="ion-trash-b"></i></button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-6">
                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Показаны @((Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage > Model.PageInfo.TotalItems) ? Model.PageInfo.TotalItems : Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage) из @Model.PageInfo.TotalItems записей</div>
            </div>
            <div class="col-sm-6">
                <div class="dataTables_paginate paging_simple_numbers" id="datatable-editable_paginate">
                    @Html.PageLinks(Model.PageInfo, x => Ajax.ActionLink(x.NameLink, "PartialTableHuntingFarmTypes", "Reference", new {page = x.CurrentPage}, new AjaxOptions {UpdateTargetId = "huntingFarmTypeContainer" }))
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#huntingFarmTypeContainer table td button.remove-row').click(function () {
        var huntingFarmTypeId = $(this).closest('tr').data('huntingFarmTypeId');
        removeData('@Url.Action("SubmitHuntingFarmTypeDelete", "Reference")', { huntingFarmTypeId: huntingFarmTypeId }, function (data) { $('#huntingFarmTypeContainer').html(data); });
    });
</script>