@model HuntControl.Domain.Concrete.spr_hunting_farm_limit
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Добавление нормы</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitHuntingFarmLimitSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "huntingFarmLimitContainer", OnSuccess = "$('#myModal').modal('hide');successAdd();" }, new { @id = "AddHuntingFarmLimitForm", @class = "form-horizontal" }))
            {
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.spr_hunting_farm_accounting_id, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-7">
                            @Html.DropDownListFor(model => model.spr_hunting_farm_accounting_id, ViewBag.Accountings as SelectList, "Выберите учетные данные", new Dictionary<string, object> { { "class", "form-control select2 input-sm" } })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.limit_day, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.limit_day, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.limit_day) } })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.limit_season, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.limit_season, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.limit_season) } })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light btn-block-xs" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="AddHuntingFarmLimitForm" class="btn btn-success waves-effect waves-light btn-block-xs"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
