@model HuntControl.Domain.Concrete.spr_violations_part
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/select2/js/select2.full.min.js"></script>

@using (Ajax.BeginForm("SubmitViolationsPartSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "violationsPartContainer", OnSuccess = "successAdd();$('#collapseEditViolationsPart').collapse('hide'); $('#partAddBtn').show();" }, new { @id = "AddViolationsPartForm", @class = "form-horizontal" }))
{

    <div class="row m-b-15">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
        <div class="col-sm-6">
            <h3 class="panel-title">Добавление части</h3>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-cancel waves-effect waves-light m-r-5" onclick="$('#collapseEditViolationsPart').collapse('hide'); $('#partAddBtn').show(); $('#collapseEditViolationsPart table tr').removeClass('warning');"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="row">
            @Html.LabelFor(model => model.part_, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.part_, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.part_) } })
            </div>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="row">
            @Html.LabelFor(model => model.part_text, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.part_text, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.part_text) } })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
    </div>
}