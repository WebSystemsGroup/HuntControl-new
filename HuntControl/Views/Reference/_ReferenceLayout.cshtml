                    <li class="@((string)ViewContext.RequestContext.RouteData.Values["action"] == "Violations" ? "active" : "" )">@Html.ActionLink("Статьи к нарушениям", "Violations", "Reference", null, new { @class = "text-clip-cust" })</li>
                    <li class="@((string)ViewContext.RequestContext.RouteData.Values["action"] == "ServiceTypes" ? "active" : "" )">@Html.ActionLink("Типы услуг", "ServiceTypes", "Reference", null, new { @class = "text-clip-cust" })</li>
