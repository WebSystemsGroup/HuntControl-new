                    <li class="@((string)ViewContext.RequestContext.RouteData.Values["action"] == "Banks" ? "active" : "" )">@Html.ActionLink("Банки", "Banks", "Reference", null, new { @class = "text-clip-cust" })</li>
                    
                </ul>
            </div>
            <!-- END MENU -->
        </div>
    </div>
    <div class="col-md-9">
        @RenderBody()   
    </div>
</div>

