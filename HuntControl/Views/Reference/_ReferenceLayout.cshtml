            <!-- SIDEBAR USERPIC -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
                <ul>
                    <li class="@((string)ViewContext.RequestContext.RouteData.Values["action"] == "Employees" ? "active" : "" )">@Html.ActionLink("Сотрудники", "Employees", "Reference", null, new { @class = "text-clip-cust"})</li>
