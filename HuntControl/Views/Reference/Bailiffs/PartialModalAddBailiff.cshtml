@model HuntControl.Domain.Concrete.spr_bailiffs
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Добавление ФССП</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitBailiffSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "bailiffsContainer", OnSuccess = "$('#myModal').modal('hide');successAdd();" }, new { @id = "AddBailiffForm", @class = "form-horizontal" }))
    {
        <div class="form-group form-group-sm">
            <div class="row">
                @Html.LabelFor(model => model.name_bailiffs, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.name_bailiffs, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.name_bailiffs) } })
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="row">
                @Html.LabelFor(model => model.address_bailiffs, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.address_bailiffs, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.address_bailiffs) } })
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="row">
                @Html.LabelFor(model => model.head_bailiffs, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.head_bailiffs, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.head_bailiffs) } })
                </div>
            </div>
        </div>
}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light btn-block-xs" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="AddBailiffForm" class="btn btn-success waves-effect waves-light btn-block-xs"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
