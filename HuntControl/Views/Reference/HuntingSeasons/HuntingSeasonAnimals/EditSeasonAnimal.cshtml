@model HuntControl.Domain.Concrete.spr_season_animal
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/bootstrap-select/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    });
</script>
@using (Ajax.BeginForm("SubmitAnimalForSeasonSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "seasonAnimalsContainer", OnSuccess = "successEdit();$('#collapseAddSeasonAnimals').collapse('hide');" }, new { @class = "form-horizontal" }))
{

    <div class="row m-b-15">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
        <div class="col-sm-6">
            <h3 class="panel-title">Изменение животного</h3>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-cancel waves-effect waves-light m-r-5" onclick="$('#collapseAddSeasonAnimals').collapse('hide'); $('#seasonAnimalAddBtn').show(); $('#collapseAddSeasonAnimals table tr').removeClass('warning');"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="col-md-6">
            @Html.Label("Животное", new { @class = "font-13" })
            @Html.DropDownListFor(model => model.spr_animal_id, ViewBag.Animal as SelectList, "Выберите животное", new Dictionary<string, object> { { "class", "form-control select2 input-sm" } })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.norm_day, new { @class = "font-13" })
            @Html.TextBoxFor(model => model.norm_day, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.norm_day) })
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="col-md-12">
            @Html.LabelFor(model => model.norm_season, new { @class = "font-13" })
            @Html.TextAreaFor(model => model.norm_season, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.norm_season) })
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
    </div>
}