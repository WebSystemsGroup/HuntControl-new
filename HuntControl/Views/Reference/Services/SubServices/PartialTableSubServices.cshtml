@model HuntControl.WebUI.Models.ServiceViewModel
<div class="row">
    <div class="col-sm-12">
        
    </div>
</div>
<hr class="m-t-10 m-b-10">
<div class="row">
    <div class="col-sm-10 col-xs-6">
        <h3 class="panel-title">Список подуслуг</h3>
    </div>
    <div class="col-sm-2 col-xs-6 m-b-10">
        <div class="text-right">
            @using (Ajax.BeginForm("PartialModalAddSubService", "Reference", new { serviceId = ViewBag.ServiceId }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
            {
                <button type="submit" class="btn btn-inverse waves-effect waves-light btn-sm"> Добавить <i class="fa fa-plus m-l-5"></i></button>
            }
        </div>
    </div>
</div>
<div class="panel panel-border panel-primary">
    <div class="panel-heading p-0">
        <div class="input-group">
            <span class="input-group-btn">
                <button type="button" class="btn waves-effect waves-light btn-link p-l-20-important" onclick="search()"><i class="fa fa-search"></i></button>
            </span>
            <input type="text" id="searchTextCity" onchange="search()" class="text-dark no-border-input" placeholder="Поиск подуслуги" value="@ViewBag.Serach"><ul class="typeahead dropdown-menu"></ul><ul class="typeahead dropdown-menu"></ul>
        </div>
    </div>
    <hr class="m-0">

    <div class="panel-body p-0 table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="number-row p-l-20-important">№</th>
                <th>@Html.DisplayNameFor(model => model.SubServiceList.First().service_sub_name_small)</th>
                <th>@Html.DisplayNameFor(model => model.SubServiceList.First().service_sub_description)</th>
                <th class="text-right p-r-20-important">
                    Действия
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.SubServiceList)
            {
                <tr data-sub-service-id="@item.id">
                    <td class="number-row p-l-20-important">
                        @((Model.PageInfo.CurrentPage - 1)*Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.service_sub_name_small)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.service_sub_description)
                    </td>
                    <td class="actions">
                        @if (User.IsInRole("superadmin"))
                        {
                            using (Ajax.BeginForm("PartialModalEditSubService", "Reference", new { subServiceId = item.id}, new AjaxOptions {UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');"}, new {@class = "form-submit"}))
                            {
                                <button class="on-default edit-row link"><i class="ion-edit"></i></button>
                            }
                            <button class="on-default remove-row link"><i class="ion-trash-b"></i></button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-6">
                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Показаны @((Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage > Model.PageInfo.TotalItems) ? Model.PageInfo.TotalItems : Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage) из @Model.PageInfo.TotalItems записей</div>
            </div>
            <div class="col-sm-6">
                <div class="dataTables_paginate paging_simple_numbers" id="datatable-editable_paginate">
                    @Html.PageLinks(Model.PageInfo, x => Ajax.ActionLink(x.NameLink, "PartialTableSubServices", "Reference", new {page = x.CurrentPage}, new AjaxOptions {UpdateTargetId = "servicesContainer" }))
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#subServicesContainer table td button.remove-row').click(function () {
        var subServiceId = $(this).closest('tr').data('subServiceId');
        removeData('@Url.Action("SubmitSubServiceDelete", "Reference")', { subServiceId: subServiceId }, function (data) { $('#subServicesContainer').html(data); });
    });
    $("#subServicesContainer tbody > tr > td:not(.actions)").on("click", function () {
        var subServiceId = $(this).closest('tr').data('subServiceId');
        $.ajax({
            type: 'POST',
            url: 'PartialAdditionally',
            data: { subServiceId: subServiceId },
            success: function (data) {
                $("#additionallyContainer").html(data);
                $(".icons-tab-steps").steps('next');
            }
        });
    });
</script>