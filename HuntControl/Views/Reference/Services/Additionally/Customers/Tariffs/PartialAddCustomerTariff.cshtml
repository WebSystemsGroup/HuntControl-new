@model HuntControl.Domain.Concrete.spr_services_sub_tariff
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/bootstrap-select/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    });
</script>
@using (Ajax.BeginForm("SubmitCustomerTariffSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "customerTariffsContainer", OnSuccess = "successAdd();$('#collapseEditCustomerTariff').collapse('hide'); $('#tariffAddBtn').show();" }, new { @id = "AddSubServiceCustomerForm", @class = "form-horizontal" }))
{
    <div class="row m-b-15">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
        <div class="col-sm-6">
            <h3 class="panel-title">Добавление тарифа</h3>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-cancel waves-effect waves-light m-r-5" onclick="$('#collapseEditCustomerTariff').collapse('hide'); $('#tariffAddBtn').show(); $('#customerTariffsContainer table tr').removeClass('warning');"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group form-group-sm">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.spr_services_sub_tariff_type_id, new { @class = "font-13" })
                    @Html.DropDownListFor(model => model.spr_services_sub_tariff_type_id, ViewBag.TariffTypes as SelectList, "Выберите тип тарифа", new Dictionary<string, object> { { "class", "selectpicker" }, { "data-style", "btn-white btn-sm" } })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.spr_services_sub_week_id, new { @class = "font-13" })
                    @Html.DropDownListFor(model => model.spr_services_sub_week_id, ViewBag.SubServiceWeeks as SelectList, "Выберите тип отсчета дней", new Dictionary<string, object> { { "class", "selectpicker" }, { "data-style", "btn-white btn-sm" } })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.tariff_, new { @class = "font-13" })
                    @Html.TextBoxFor(model => model.tariff_, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.tariff_) })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.charge_, new { @class = "font-13" })
                    @Html.TextBoxFor(model => model.charge_, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.charge_) })
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group form-group-sm">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.count_day_return, new { @class = "font-13" })
                    @Html.TextBoxFor(model => model.count_day_return, new { @class = "form-control", @placeholder = "Дни на возврат документов с органа власти" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.count_day_processing, new { @class = "font-13" })
                    @Html.TextBoxFor(model => model.count_day_processing, new { @class = "form-control", @placeholder = "Дни на обработку" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.count_day_execution, new { @class = "font-13" })
                    @Html.TextBoxFor(model => model.count_day_execution, "", new { @class = "form-control", @placeholder = "Дни на исполнение в органе власти" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <hr class="m-t-0" />
        </div>
    </div>
}