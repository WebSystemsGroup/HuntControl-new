<div class="row">
    <div class="col-lg-12">
        <div class="panel-group" id="accordion-test-2">
            <div class="panel panel-default">
                <div class="panel-heading" id="folderCollapseHeader" style="cursor: pointer;">
                    <h4 class="panel-title">
                        Папки
                    </h4>
                </div>
                <div id="collapseOne-2" class="panel-collapse collapse in">
                    <div class="panel-body" id="foldersTableContainer">
                        @Html.Action("PartialTableSubServiceFolders", "Reference", new { subServiceId = ViewBag.SubServiceId })
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Файлы
                    </h4>
                </div>
                <div id="collapseTwo-2" class="panel-collapse collapse">
                    <div class="panel-body" id="filesTableContainer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#folderCollapseHeader').click(function () {
        $('#collapseOne-2').collapse('show');
        $('#collapseTwo-2').collapse('hide');
        $('#folderCollapseHeader>.panel-title').text('Папки');
    });
</script>