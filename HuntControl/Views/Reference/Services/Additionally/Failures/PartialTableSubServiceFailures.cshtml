@model HuntControl.WebUI.Models.ServiceViewModel
<div class="row">
    <div class="col-sm-10 col-xs-6">
        <h3 class="panel-title">Список отказов предоставления услуги</h3>
    </div>
    <div class="col-sm-2 col-xs-6 m-b-10">
        <div class="text-right">
            @using (Ajax.BeginForm("PartialModalAddSubServiceFailure", "Reference", new { subServiceId = ViewBag.SubServiceId }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
            {
                <button type="submit" class="btn btn-inverse waves-effect waves-light btn-sm"> Добавить <i class="fa fa-plus m-l-5"></i></button>
            }
        </div>
    </div>
</div>
<div class="panel panel-border panel-primary">
    <div class="panel-body p-0 table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th class="number-row p-l-20-important">№</th>
                <th>@Html.DisplayNameFor(model => model.SubServiceFailureList.First().failure_text)</th>
                <th>@Html.DisplayNameFor(model => model.SubServiceFailureList.First().legal_act)</th>
                <th class="text-right p-r-20-important">
                    Действия
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.SubServiceFailureList)
            {
                <tr data-sub-service-failure-id="@item.id">
                    <td class="number-row p-l-20-important">
                        @((Model.PageInfo.CurrentPage - 1)*Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.failure_text)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.legal_act)
                    </td>
                    <td class="actions">
                        @if (User.IsInRole("superadmin") || User.IsInRole("admin"))
                        {
                            using (Ajax.BeginForm("PartialModalEditSubServiceFailure", "Reference", new { subServiceFailureId = item.id }, new AjaxOptions { UpdateTargetId = "myModal", OnSuccess = "$('#myModal').modal('show');" }, new { @class = "form-submit" }))
                            {
                                <button class="on-default edit-row link" title="Изменение"><i class="ion-edit"></i></button>
                            }
                            <button class="on-default remove-row link"><i class="ion-trash-b"></i></button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-6">
                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Показаны @((Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage > Model.PageInfo.TotalItems) ? Model.PageInfo.TotalItems : Model.PageInfo.CurrentPage*Model.PageInfo.ItemsPerPage) из @Model.PageInfo.TotalItems записей</div>
            </div>
            <div class="col-sm-6">
                <div class="dataTables_paginate paging_simple_numbers" id="datatable-editable_paginate">
                    @Html.PageLinks(Model.PageInfo, x => Ajax.ActionLink(x.NameLink, "PartialTableSubServiceFailures", "Reference", new {page = x.CurrentPage}, new AjaxOptions {UpdateTargetId = "failuresPillContainer" }))
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#failuresPillContainer table td button.remove-row').click(function () {
        var subServiceFailureId = $(this).closest('tr').data('subServiceFailureId');
        removeData('@Url.Action("SubmitSubServiceFailureDelete", "Reference")', { subServiceFailureId: subServiceFailureId }, function (data) { $('#failuresPillContainer').html(data); });
    });
</script>

