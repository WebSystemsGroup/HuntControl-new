@model HuntControl.Domain.Concrete.spr_services_sub_failure
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Изменение отказа предоставления услуги</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitSubServiceFailureSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "failuresPillContainer", OnSuccess = "successAdd();$('#myModal').modal('hide');" }, new { @id = "EditSubServiceFailureForm", @class = "form-horizontal" }))
            {
                        <div class="form-group form-group-sm">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.failure_text, new { @class = "font-13" })
                                @Html.TextBoxFor(model => model.failure_text, new { @class = "form-control", @placeholder = "Текст отказа" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.legal_act, new { @class = "font-13" })
                                @Html.TextBoxFor(model => model.legal_act, new { @class = "form-control", @placeholder = "Нормативно правовые акты" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.commentt, new { @class = "font-13" })
                                @Html.TextAreaFor(model => model.commentt, new { @class = "form-control", @placeholder = "Комментарии" })
                            </div>
                        </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="EditSubServiceFailureForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
