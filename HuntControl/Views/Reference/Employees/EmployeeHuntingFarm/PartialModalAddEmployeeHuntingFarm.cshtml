@model HuntControl.Domain.Concrete.spr_employees_hunting_farm
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
<script>
    $(document).ready(function () {
        $(".select2").select2();
        $("select").on("select2:close", function (e) {
            $(this).valid();
        });
    });
</script>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myLargeModalLabel">Добавление охотоугодья</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitEmployeeHuntingFarmSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "employeeHuntingFarmsContainer", OnSuccess = "$('#secondaryModal').modal('hide');" }, new { @id = "AddEmployeeRoleForm", @class = "form-horizontal" }))
            {
                <div class="form-group form-group-sm">
                    <div class="row">
                        <label class="col-md-4 control-label text-right">Роль</label>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.spr_hunting_farm_id, ViewBag.HuntingFarms as SelectList, "Выберите охотугодье", new Dictionary<string, object> { { "class", "form-control select2 input-sm" } })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="AddEmployeeRoleForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
